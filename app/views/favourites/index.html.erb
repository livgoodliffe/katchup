<%= render "shared/navbar" %>

<!-- Buttons -->

<%= render "lists/list_type" %>

<!-- Search bar -->

<div class="grey-search-bar">
    <%= form_tag(lists_path, method: :get, remote: true) do %>
      <form class="form-inline search-bar" >
        <div>
          <%= text_field_tag :search, params[:search], class: "search-bar",
          placeholder: "Search through your favourites"%>
        </div>
      </form>
    <% end %>
</div>

<!-- Cards -->

<div class="d-flex flex-column justify-content-center">
  <% @favourites.each do |favourite| %>
    <div class="spot-card">

      <!-- Image -->
      <%= image_tag("#{favourite.spot.image}")%>

      <!-- Text -->
      <div class="spot-details">
        <div class="spot-name">
          <%= favourite.spot.name %>
        </div>
        <div class=spot-location>
          <%#= spot.location[0..20] %>
        </div>
        <div class=spot-description>
          <%= "#{favourite.spot.description[0..20]}..." %>
        </div>
      </div>

      <!-- Icons -->
      <%= render "shared/icons", spot: favourite.spot %>

    </div>
  <% end %>


</div>
