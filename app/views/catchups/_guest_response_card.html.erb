<% catchup = Catchup.find(guest.catchup_id) %>
<div class="card catchup-card" id="<%= id %>">
  <div class="text-center">
    <div>
      <% if guest.accepted? %>
        ACCEPTED <i style="color: green" class="fas fa-check"></i>
      <% end %>
      <% if guest.declined? %>
        DECLINED <i style="color: red" class="fas fa-times"></i>
      <% end %>
    </div>
    <div>
      <%= catchup.time.strftime("%A %-d %b %Y %l:%M%p") %>
    </div>
    <div>
      <%= catchup.spot.name %>
    </div>
    <div class="guest-response-image-and-name">
      <%= cl_image_tag("#{guest.user.avatar}") %>
      <p><%= User.find(guest.user_id).first_name %>  <%= User.find(guest.user_id).last_name %></p>
    </div>
    <div class="d-flex justify-content-around mb-3">
      <div>
        <%= form_tag(catchups_path, method: :get, remote: true) do %>
          <%= hidden_field_tag :guest_response_id, guest.id %>
          <%= hidden_field_tag :response_dismiss %>
          <%= button_tag "Dismiss", class: 'btn btn-info' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
