<div class="card catchup-card" id="<%= id %>">
  <div class="text-center">
    <div class="catchup-card-when">
      <h4><%= catchup.time.strftime("%A %-d %b %Y %l:%M%p") %></h3>
    </div>
    <div class="catchup-list-spot-image">
      <%= image_tag("#{catchup.spot.images.first.image}") %>
    </div>
    <div class="catchup-list-spot-name"><%= catchup.spot.name %></div>
    <div>Invited by: <h4><%= @organiser.first_name %> <%= @organiser.last_name %></h4></div>
    <div class="d-flex justify-content-around mb-3">
      <div>
        <%= form_tag(catchups_path, method: :get, remote: true) do %>
          <%= hidden_field_tag :catchup_invitation_id, catchup.id %>
          <%= hidden_field_tag :catchup_accept %>
          <%= button_tag "Accept", class: 'btn btn-primary' %>
        <% end %>
      </div>
      <div>
        <%= form_tag(catchups_path, method: :get, remote: true) do %>
          <%= hidden_field_tag :catchup_invitation_id, catchup.id %>
          <%= hidden_field_tag :catchup_decline %>
          <%= button_tag "Decline", class: 'btn btn-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
