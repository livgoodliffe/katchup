function addResults(resultHTML) {
  catchupContainer = document.getElementById('catchup-invitation-content');
  catchupContainer.insertAdjacentHTML('beforeend', resultHTML)
}

function removeResult(id) {
  const result = document.getElementById(id);
  result.parentNode.removeChild(result);
}

<% case @action %>
<% when "add" %>
addResults(`<%= render("catchup-invitation-summary-card", catchup:@catchup, id: "catchup-invite-card#{@catchup.id}") %>`);
<% when "remove" %>
removeResult('<%= "catchup-invite-card#{@catchup.id}" %>');
<% end %>
