<%= render "shared/navbar" %>
<%= link_to new_catchup_path do %>
  <div class="red-band-button" style="padding-top: 70px">Create a Katchup</div>
<% end %>
<div class="container">
  <!--   <h1>My upcoming katchups:</h1> -->
  <div class="row flex-column">
    <% @catchups.each do |catchup| %>
      <div class="card catchup-list-card">
        <div class="card-body">
          <div class="text-center">
            <div class="catchup-list-spot-image">
              <%= image_tag("#{catchup.spot.images.first.image}") %>
            </div>
            <div class="catchup-list-spot-name"><%= catchup.spot.name %></div>
            <h4><%= catchup.time.strftime("%a %d %b %Y %H:%M%p") %></h3>
          </div>
          <div class="row justify-content-around">
            <% catchup.guests.each do |guest| %>
              <div>
                <div class="catchup-list-guest-image">
                  <%= cl_image_tag("#{guest.user.avatar}") %>
                </div>
                <%= guest.user.first_name %>
                <%= guest.user.last_name %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>