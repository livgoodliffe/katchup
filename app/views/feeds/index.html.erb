</div>

<!-- Feed page -->

<div id="feed-page" class="container">
  <%= render "feed-page" %>
</div>


<!-- Search page -->

<div id="search-page" class="hidden container">

  <div id="search-results" class="discover-search-results">
    <% @spots.first(25).each do |spot| %>
        <%= render "spots/spot_card", spot: spot %>
    <% end %>
  </div>
</div>


