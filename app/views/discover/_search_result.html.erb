<div class="spot-card">
  <!-- Image -->
  <div class=spot-image>
    <%= image_tag("#{spot.image}")%>
  </div>
  <div class="spot-details">
    <div class="spot-name">
      <%= spot.name %>
    </div>
    <div class=spot-location>
      <%#= spot.location[0..20] %>
    </div>
    <div class=spot-description>
      <%= "#{spot.description[0..20]}..." %>
    </div>
  </div>
  <!-- Icons -->
  <% if user_signed_in? %>
    <div class="d-flex flex-column">
      <div class="m-2" id="<%= spot.id %>" >
        <%= render 'favourites/heart', spot: spot %>
      </div>
      <div class="m-2" id="w<%= spot.id %>" >
        <%= render 'wishlists/bookmark', spot: spot %>
      </div>
    </div>
  <% end %>
</div>
