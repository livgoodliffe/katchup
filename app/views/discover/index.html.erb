<%= render "shared/navbar" %>
<h1>Discover</h1>
<!-- Search bar -->
<div class="grey-search-bar">
  <%= render('search/search_form', search_type: 'all_spots', placeholder: 'Search All Spots') %>
</div>
<div id="search-results" class="search-results">
  <!-- this content only exists so that full spot list exists before any search is carried out -->
  <% @spots.each do |spot| %>
    <%= render "spots/spot_card", spot: spot %>
  <% end %>
</div>