
<div class="discover-container container">
  <div>
    <div class="discover-heading container">
      <h4>Your friends are loving</h4>
    </div>
    <div class="discover-horizontal">

      <% @spots.first(10).each do |spot| %>
        <div class="discovery-card mx-2">
          <%= cl_image_tag(spot.images.first.image, :crop=>"scale", class: "discover-card-image" ) %>
          <div class="card-content">
            <p class="mt-1"><%= spot.name %></p>
            <p><%= spot.location %></p>
          </div>
        </div>

      <% end %>





    </div>
  </div>

  <div>
    <div class="discover-heading container">
      <h4>Cuisine</h4>
    </div>
    <div class="discover-horizontal">
    </div>
  </div>

  <div>
    <div class="discover-heading container">
      <h4>Trending in Melbourne</h4>
    </div>
    <div class="discover-horizontal">
    </div>
  </div>

  <div>
    <div class="discover-heading container">
      <h4>Everyone wants to try</h4>
    </div>
    <div class="discover-horizontal">
    </div>
  </div>

  <div>
    <div class="discover-heading container">
      <h4>Nearby</h4>
    </div>
    <div class="discover-horizontal">
    </div>
  </div>
</div>
