<div class="discover-wrapper">
  <div class="discover-container container">
    <% unless @friends_spots.empty? %>
      <div>
        <div class="discover-heading container">
          <h4>Your friends are loving</h4>
        </div>
        <div class="discover-horizontal">
          <%= render 'discover/index/friends_loving_cards' %>
        </div>
      </div>
    <% end %>

    <div>
      <div class="discover-heading container">
        <h4>Cuisine</h4>
      </div>
      <div class="discover-horizontal cuisine">
        <%= render 'discover/index/cuisines_card' %>
      </div>
    </div>

    <div>
      <div class="discover-heading container">
        <h4>Trending in Melbourne</h4>
      </div>
      <div class="discover-horizontal">
        <%= render 'discover/index/discover_cards' %>
      </div>
    </div>

    <div>
      <div class="discover-heading container">
        <h4>Everyone wants to try</h4>
      </div>
      <div class="discover-horizontal">
        <%= render 'discover/index/discover_cards' %>
      </div>
    </div>

    <div>
      <div class="discover-heading container">
        <h4>Nearby</h4>
      </div>
      <div class="discover-horizontal">
        <%= render 'discover/index/discover_cards' %>
      </div>
    </div>
  </div>
</div>
