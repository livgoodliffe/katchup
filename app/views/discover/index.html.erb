<%= render "shared/navbar" %>

<!-- Search bar -->

<div class="grey-search-bar" style="padding-top: 70px;">
  <%= form_tag(discover_index_path, method: :get, remote: true) do %>
    <form class="form-inline search-bar" >
      <div>
        <%= text_field_tag :search, params[:search], class: "search-bar",
        placeholder: "Search"%>
      </div>
    </form>
  <% end %>
</div>

<!-- Cards -->

<div id="spots-discover" class="spots-discover">
  <% @spots.each do |spot| %>
    <%= render'search_result', spot: spot %>
  <% end %>
</div>

