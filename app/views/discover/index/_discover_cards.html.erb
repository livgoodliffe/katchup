<% @spots.sample(25).each do |spot| %>
  <div class="discovery-card mx-2">
    <%= cl_image_tag(spot.thumbnail, :crop=>"scale", class: "discover-card-image" ) %>
    <div class="card-content">
      <p class="mt-1"><%= spot.name %></p>
      <p><%= spot.location %></p>
    </div>
    <%= link_to spot_path(spot), class: "discover-card-link" do %>
    <% end %>
  </div>
<% end %>
