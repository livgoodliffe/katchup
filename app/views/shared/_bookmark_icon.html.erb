<!-- Bookmark Icon -->

<% if user_signed_in? %>
  <div class="d-flex flex-column">
      <% if current_user.wishlisted_spot?(spot) %>
        <%= link_to wishlist_path(current_user.find_wishlist(spot)), method: :delete, remote: true do %>
          <i class="fas fa-bookmark bookmark-icon-active"></i>
        <% end %>
      <% else %>
        <%= link_to spot_wishlists_path(spot), method: :post, remote: true do %>
          <i class="fas fa-bookmark bookmark-icon"></i>
        <% end %>
      <% end %>
  </div>
<% end %>
