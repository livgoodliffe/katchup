<div class="container login">

  <h5 class="katchup-form-heading">Join the Katchup club</h5>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { class: "katchup-form-input", autocomplete: "email" },
                  placeholder: "email",
                  label: false %>
      <%= f.input :first_name,
                  required: true,
                  input_html: { class: "katchup-form-input", autocomplete: "first name" },
                  placeholder: "first name",
                  label: false %>
      <%= f.input :last_name,
                  required: true,
                  input_html: { class: "katchup-form-input", autocomplete: "last name" },
                  placeholder: "last name",
                  label: false %>
      <%= f.input :avatar,
                  required: false,
                  input_html: { class: "katchup-form-input", autocomplete: "avatar" },
                  placeholder: "upload your avatar",
                  label_html: { class: "katchup-form-label" },
                  label: "Upload your avatar:" %>
      <%= f.input :password,
                  required: true,
                  input_html: { class: "katchup-form-input", autocomplete: "new-password" },
                  placeholder: "password",
                  label: false %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { class: "katchup-form-input", autocomplete: "new-password" },
                  placeholder: "password confirmation",
                  label: false %>

    <%= f.button :submit, "Sign up", class: "login-button"  %>

  <% end %>

  <br>

  <%= render "devise/shared/links" %>

</div>
