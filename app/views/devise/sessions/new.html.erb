<div class="container login">

  <h5 class="katchup-form-heading">Log in</h5>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: "email",
                label: false,
                input_html: { class: "katchup-form-input", autocomplete: "email" }
                %>
    <%= f.input :password,
                required: false,
                placeholder: "password",
                label: false,
                input_html: { class: "katchup-form-input", autocomplete: "current-password" }
                %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    <%= f.button :submit, "Log in", class: "login-button"  %>

  <% end %>

  <br>

  <%= render "devise/shared/links" %>

</div>
