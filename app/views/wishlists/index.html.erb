<%= render "shared/navbar" %>

<%= render "lists/list_type" %>

<!-- Search bar -->

<div class="grey-search-bar">
    <%= form_tag(lists_path, method: :get, remote: true) do %>
      <form class="form-inline search-bar" >
        <div>
          <%= text_field_tag :search, params[:search], class: "search-bar",
          placeholder: "Search through your wishlist"%>
        </div>
      </form>
    <% end %>
</div>

<!-- Cards -->


<div class="d-flex flex-column justify-content-center">

  <% @wishlist.each do |wishlist| %>

    <div class="spot-card">

      <!-- Image -->

      <%= image_tag("#{wishlist.spot.image}")%>

      <!-- Text -->

      <div class="spot-details">
        <div class="spot-name">
          <%= wishlist.spot.name %>
        </div>
        <div class="spot-location">
          <%#= spot.location[0..20] %>
        </div>
        <div class="spot-description">
          <%= "#{wishlist.spot.description[0..20]}..." %>
        </div>
      </div>

      <!-- Icons -->

      <%= render "shared/icons", spot: wishlist.spot %>

    </div>

  <% end %>

</div>
