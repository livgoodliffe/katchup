<% if current_user.wishlisted_spot?(spot) %>

    <i class="fas fa-bookmark small-bookmark-icon"></i>
<% else %>
    <i class="far fa-bookmark small-bookmark-icon"></i>
<% end %>





<% if current_user.favorited_spot?(@spot) %>

  <%= link_to favorite_path(current_user.find_favorite(@book)), method: :delete, remote: true do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(@book), method: :post, remote: true do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>
