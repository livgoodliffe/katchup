<div class="card border-0">
  <div class="show-banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(<%= @spot.images.first.image %>);">
    <div class="show-banner-content d-flex flex-column align-items-center">

      <h1 ><%= @spot.name %></h1>
      <div id="show-underline"></div>

        <%= render 'shared/bottle_icon', spot: @spot %>

      <div id="average-rating">
        <%= render 'spots/show/spot-show-average-rating', average: @spot.average_rating %>
      </div>
    </div>
  </div>
</div>
