


<%= form_tag(discover_index_path, method: :get, remote: true) do %>
  <form class="form-inline" >
    <div class="md-form my-0 mr-3">
      <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2", placeholder: "Search"%>
    </div>
  </form>
<% end %>





<div class="spots-index-wrapper">
  <% @spots.each do |spot| %>
    <%= render('restaurant_card', spot: spot) %>
  <% end %>
  <div id="map"
    style="width: 100%; height: 400px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
