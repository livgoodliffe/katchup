<!-- Search bar -->
<div class="container">
  <div class="search-bar grow" id="search-search">

    <i id='search-back-button' class="fas fa-arrow-left red-arrow hidden"></i>
    <%= render 'spots/search/search-bar', placeholder: 'Search for a spot...' %>

  </div>
</div>

<!-- Feed page -->

<div id="feed-page">
  <%= render "spots/feed/feed-page" %>
  <div id="infinite-scrolling">
    <%= will_paginate @activities%>
  </div>
</div>

<!-- Search results -->

<div id="search-page" class="hidden container">

  <div id="search-results" class="discover-search-results">
    <%= render 'spots/search/search-results', spots_db: @spots_db, spots_zom: @spots_zom %>
  </div>
</div>

