<%= form_tag spots_path, method: :get do %>
  <div class="search-field mr-2 ml-2">

  <i class="fas fa-search search-icon"></i>

  <%= text_field_tag :query,
    params[:query],
    class: "search-text",
    placeholder: "Find a spot",
    id: "spots-search"
  %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div id="spots">

        <div id="search-results" class="discover-search-results">

          <!-- database results -->

          <% @spots_db.each do |spot| %>
            <%= link_to spot_path(spot) do %>
              <div class="spot-card mx-auto">
                  <div class=spot-image>
                    <%= image_tag("#{spot.thumbnail}") %>
                  </div>
                  <div class="spot-details">
                    <div class="spot-name">
                      <%= spot.name %>
                    </div>
                    <div class="spot-location">
                      <%= spot.suburb %>, <%= spot.city %>
                    </div>
                  </div>
              </div>
            <% end %>
          <% end %>

          <!-- zomato results -->

          <% @spots_zom.each do |spot| %>
            <!-- definitions -->
              <% res_id = spot["restaurant"]["R"]["res_id"] %>
              <% thumbnail = spot["restaurant"]["thumb"] %>
              <% name = spot["restaurant"]["name"] %>
              <% suburb = spot["restaurant"]["location"]["locality"] %>
              <% city = spot["restaurant"]["location"]["city"] %>
              <% latitude = spot["restaurant"]["location"]["latitude"] %>
              <% longitude = spot["restaurant"]["location"]["longitude"] %>
            <%= link_to spots_path(
              res_id: res_id,
              thumbnail: thumbnail,
              name: name,
              suburb: suburb,
              city: city,
              latitude: latitude,
              longitude: longitude ), :method => :post do %>
              <div class="spot-card mx-auto">
                  <div class=spot-image>
                    <%= image_tag("#{thumbnail}") %>
                  </div>
                  <div class="spot-details">
                    <div class="spot-name">
                      <%= name %>
                    </div>
                    <div class="spot-location">
                      <%= suburb %>, <%= city %>
                    </div>
                  </div>
              </div>
            <% end %>
          <% end %>


        </div>

      </div>
    </div>
  </div>
</div>  </div>
