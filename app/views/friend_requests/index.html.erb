<div class="container">

  <div class="d-flex">
    <%= link_to :back do %>
      <i class="fas fa-arrow-left red-arrow"></i>
    <% end %>
    <h4>Friend requests</h4>
  </div>

  <div class="card my-2">
    <div class="card-body">
      <h5>Sent</h5>
      <% @outgoing.each do |request| %>
        <div class="card-name d-flex justify-content-between">
          <%= request.friend.full_name %>
          <%= link_to "Cancel", friend_request_path(request, user_id: request.friend.id), method: :delete, class: "requests-link" %>
        </div>
      <% end %>
    </div>
  </div>

  <% if @incoming.count > 0 %>

    <div class="card my-2">
      <div class="card-body">
        <h5>Recieved</h5>
        <% @incoming.each do |request| %>
          <div class="card-name d-flex justify-content-between">
            <%= request.user.full_name %>
            <%= link_to "Accept", friend_request_path(request), method: :put %>
          </div>
        <% end %>
      </div>
    </div>

  <% end %>
</div>
