<div class="d-flex">
  <%= link_to users_path do %>
    <i class="fas fa-arrow-left red-arrow"></i>
  <% end %>
  <h4>My friends</h4>
</div>

<% @friends.each do |friend| %>
  <% byebug %>
  <div class="card my-2 pt-0 shadow-sm">
    <div class="card-body py-0 d-flex justify-content-between align-items-center">
      <%= cl_image_tag(friend.friend.avatar, class: "avatar m-3") %>
      <%= friend.friend.full_name %>
    </div>
    <%= link_to user_path(friend.friend), class: "card-link" do %>
    <% end %>
  </div>
<% end %>
