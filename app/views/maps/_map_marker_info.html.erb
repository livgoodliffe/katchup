<div class="map-popup">

    <div class="map-popup-image">
      <%= image_tag("#{spot.images.first.image}")%>
    </div>

    <div class="mr-3">
      <div>
        <h5><%= spot.name %></h5>
      </div>
      <div>
        <%= spot.address.gsub(/ VIC \d{4}?/,'') %>
      </div>
    </div>

    <!-- Icon -->
    <div class="spot-card-icon">
      <div id="w<%= spot.id %>" >
        <%= render 'shared/bookmark_icon', spot: spot %>
      </div>
    </div>

</div>
