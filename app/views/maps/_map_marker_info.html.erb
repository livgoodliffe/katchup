<div class="map-popup">

<%= link_to spot_path(spot) do %>
  <div class="map-popup-image">
    <%= image_tag("#{spot.thumbnail}")%>
  </div>
<% end %>

<%= link_to spot_path(spot) do %>
  <div class="mr-3">
    <div>
      <h5><%= spot.name %></h5>
    </div>
    <div>
      <p><%= spot.suburb %>, <%= spot.city %></p>
    </div>
  </div>
<% end %>

  <!-- Icon -->
  <div class="spot-card-icon">
    <div id="w<%= spot.id %>" >
      <%= render 'shared/bookmark_icon', spot: spot %>
    </div>
  </div>

</div>
