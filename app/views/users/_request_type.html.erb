<div class="red-buttons-container">

  <div class="<%= 'active-red-button' if params[:list_type] == 'requests' %>">
    <div class="red-button">
      <%#= link_to requests_path(list_type: 'requests') do %>
        <p class="m-0">Friend Requests</p>
      <%# end %>
    </div>
  </div>

  <div class="<%= 'active-red-button' if params[:list_type] == 'pending' %>">
    <div class="red-button">
      <%#= link_to pending_path(list_type: 'pending') do %>
        <p class="m-0 <%= 'active' if params[:list_type] == 'wishlists' %>">Pending Requests</p>
      <%# end %>
    </div>
  </div>

</div>
