<%= form_tag search_path, method: :get do %>
  <div class="search-field mr-2 ml-2">
    <i class="fas fa-search search-icon"></i>
    <%= text_field_tag :query,
        params[:query],
        class: "search-text",
        placeholder: "Find a spot",
        id: "spots-search"
      %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div id="spots">

        <div id="search-results" class="discover-search-results">
          <% @spots.each do |spot| %>
            <div class="spot-card mx-auto">
                <div class=spot-image>
                  <%= image_tag("#{spot["restaurant"]["thumb"]}") %>
                </div>
                <div class="spot-details">
                  <div class="spot-name">
                    <%= spot["restaurant"]["name"] %>
                  </div>
                  <div class="spot-location">
                    <%= spot["restaurant"]["location"]["locality"] %>, <%= spot["restaurant"]["location"]["city"] %>
                  </div>
                </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>



