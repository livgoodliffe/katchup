<h2>Search through DB and Zomato</h2>

<%= form_tag search_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a spot"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<h5>Search results:</h5>

<ul>
  <% @spots.each do |spot| %>
    <li><%= spot["restaurant"]["name"] %></li>
    <li><%= spot["restaurant"]["location"]["locality"] %>, <%= spot["restaurant"]["location"]["city"] %></li>
    <li><%= spot["restaurant"]["location"]["latitude"] %></li>
    <li><%= spot["restaurant"]["location"]["longitude"] %></li>
    <%= image_tag("#{spot["restaurant"]["thumb"]}", class: "dark-pic feed-image") %>
  <% end %>
</ul>







