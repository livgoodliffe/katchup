<h2>Search</h2>

<%= form_tag search_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a spot",
    id: "spots-search"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<h5>Search results:</h5>

<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div id="spots">

        <div id="search-results" class="discover-search-results">
          <% @spots.each do |spot| %>
            <div class="spot-card mx-auto">
                <div class=spot-image>
                  <%= image_tag("#{spot["restaurant"]["thumb"]}") %>
                </div>
                <div class="spot-details">
                  <div class="spot-name">
                    <%= spot["restaurant"]["name"] %>
                  </div>
                  <div class="spot-location">
                    <%= spot["restaurant"]["location"]["locality"] %>, <%= spot["restaurant"]["location"]["city"] %>
                  </div>
                </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>



